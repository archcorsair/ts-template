{
  "name": "ts-template",
  "version": "0.1.0",
  "description": "Modern TypeScript template with Bun and Biome.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bunx --bun tsc -p tsconfig.build.json && bunx --bun tsc -p tsconfig.build.cjs.json",
    "typecheck": "bunx --bun tsc -p tsconfig.json --noEmit",
    "lint": "bunx --bun biome check .",
    "format": "bunx --bun biome format --write .",
    "check": "bun run typecheck && bun run lint",
    "test": "bun test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/archcorsair/ts-template"
  },
  "author": "Daniel S <archcorsair@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.9",
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "typescript": "5.9.3"
  }
}
